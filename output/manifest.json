{
  "manifest_version": 3,
  "name": "SampleWizard",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "48": "hat48.png",
    "128": "witch-hat.png"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "activeTab",
    "tabCapture",
    "offscreen",
    "unlimitedStorage",
    "storage"
  ],
  "host_permissions": [
    "https://extensionpay.com/*"
  ],
  "commands": {
    "showcontentdialog": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "show content dialog"
    }
  }
}
